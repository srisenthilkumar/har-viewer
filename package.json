{
  "name": "har-viewer",
  "displayName": "HAR Viewer",
  "description": "HTTP Archive Viewer",
  "version": "0.0.2",
  "publisher": "unclebeast",
  "author": {
    "name": "Sri senthil kumar",
    "email": "asrisenthilkumar@gmail.com"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
	  "color": "#232323",
	  "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/srisenthilkumar/har-viewer"
  },
  "contributors": [
    {
      "name": "Sri senthil kumar",
      "email": "asrisenthilkumar@gmail.com"
    },
    {
      "name": "Naveen",
      "email": "",
      "url": ""
    }
  ],
  "bugs": "https://github.com/srisenthilkumar/har-viewer/issues",
  "engines": {
    "vscode": "^1.45.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:har-viewer.preview"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "har-viewer.preview",
        "title": "Preview",
        "category": "HAR Viewer"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .har",
          "command": "har-viewer.preview",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .har",
          "command": "har-viewer.preview",
          "group": "navigation"
        }
      ]
    },
    "configuration": [
      {
        "title": "HAR VIEWER",
        "properties": {
          "harViewer.pathNamingConvention": {
            "type": "string",
            "default": "Full",
            "enum": [
              "Full",
              "Relative",
			  "LastPortion"
            ],
            "enumDescriptions": [
				"Full: Displays the entire path with the domain name",
				"Relative: Displays the relative path completely without the domain name",
				"LastPortion: Displays the last portion of the path. e.g., displays only awd from the path abc/123/awd"
            ]
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.45.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^10.2.0",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "lzutf8": "^0.5.6"
  }
}
